@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="row justify-content-center my-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white text-center py-3">
                <h2 class="card-title mb-0">
                    <i class="bi bi-box-arrow-in-right"></i> Добре дошли отново
                </h2>
            </div>
            <div class="card-body p-4">
                <form method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Email" class="form-label">Имейл адрес</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                                   placeholder="име@пример.com" required />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label">Парола</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                                   placeholder="Въведете вашата парола" required />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Запомни ме
                            </label>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> Вход
                        </button>
                    </div>

                    <hr class="my-4" />

                    <div class="text-center">
                        <div class="mb-2">
                            <a class="text-decoration-none" asp-page="./ForgotPassword">
                                <i class="bi bi-question-circle"></i> Забравена парола?
                            </a>
                        </div>
                        <div class="mb-2">
                            <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                <i class="bi bi-person-plus"></i> Регистрация на нов потребител
                            </a>
                        </div>
                        <div>
                            <a class="text-decoration-none" asp-page="./ResendEmailConfirmation">
                                <i class="bi bi-envelope-check"></i> Изпрати отново имейл за потвърждение
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
